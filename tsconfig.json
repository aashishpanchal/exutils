{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "composite": false,
    "declaration": true,
    "strictNullChecks": true,
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"]
}
